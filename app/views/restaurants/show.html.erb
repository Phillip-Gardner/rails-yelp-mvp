<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<%= link_to 'Back', restaurants_path %> |
<%= link_to 'Leave a Review', new_restaurant_review_path(@restaurant.id) %>

<h2>Reviews</h2>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.content %>
      <%= review.rating %>
      <%= link_to '❌', review_path(review.id), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
